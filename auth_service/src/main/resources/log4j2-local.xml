<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%date{yyyy-MM-dd HH:mm:ss.SSS} %p -- [%c{1}]: %m%n</Property>
        <Property name="LOG_SUFFIX">local</Property>
        <Property name="LOG_PATH">logs/${LOG_SUFFIX}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile name="debugLog" fileName="${LOG_PATH}/auth_${LOG_SUFFIX}_debug.log"
                     filePattern="${LOG_PATH}/auth_${LOG_SUFFIX}_%d{yyyy-MM-dd}-%i_debug.log">
            <LevelRangeFilter minLevel="DEBUG" maxLevel="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB" />
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

        <RollingFile name="infoLog" fileName="${LOG_PATH}/auth_${LOG_SUFFIX}_info.log"
                     filePattern="${LOG_PATH}/auth_${LOG_SUFFIX}_%d{yyyy-MM-dd}-%i_info.log">
            <LevelRangeFilter minLevel="INFO" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <RollingFile name="errorLog" fileName="${LOG_PATH}/auth_${LOG_SUFFIX}_error.log"
                     filePattern="${LOG_PATH}/auth_${LOG_SUFFIX}_%d{yyyy-MM-dd}-%i_error.log">
            <LevelRangeFilter minLevel="ERROR" maxLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="ru.fireplaces.harrypotter.itmo.auth" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="debugLog"/>
            <AppenderRef ref="infoLog"/>
            <AppenderRef ref="errorLog"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
